{
  "compilerOptions": {
      "experimentalDecorators": true,
      "module": "amd",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "noImplicitThis": true,
      "strict": true,
      "target": "ES6",
      "rootDir": "src/",
      "outDir": "dist/",
      "jsx": "react",
      "lib": [
        "es5",
        "es6",
        "dom",
        "es2015.promise"
      ],
      "types": [
          "react",
          "jest",
          "node"
      ],
      "esModuleInterop": true
  },
  "include": [
    "src"
  ]
}
